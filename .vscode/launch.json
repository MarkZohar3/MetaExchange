    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: MetaExchange.Console Debug (CLI parity)",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/src/MetaExchange.Console/MetaExchange.Console.csproj",
            "args": [
                "${workspaceFolder}/data/venues"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "C#: MetaExchange.Console Debug (Prompt args)",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/src/MetaExchange.Console/MetaExchange.Console.csproj",
            "args": [
                "${input:orderBookPath}"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "C#: MetaExchange.API Debug (Local venues)",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/src/MetaExchange.Api/MetaExchange.Api.csproj",
            "cwd": "${workspaceFolder}",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "VenuesDirectory": "${workspaceFolder}/data/venues"
            }
        }
    ],
    "inputs": [
        {
            "id": "orderBookPath",
            "type": "promptString",
            "description": "Path to order book file",
            "default": "${workspaceFolder}/data/venues"
        }
    ]
}
