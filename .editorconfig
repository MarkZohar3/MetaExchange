root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.cs]
csharp_prefer_braces = true
dotnet_diagnostic.IDE0011.severity = warning

# Disable CA1707 in tests
[*Tests.cs]
dotnet_diagnostic.CA1707.severity = none

# (Optional, also disable for all files under tests folder)
[tests/**/*.cs]
dotnet_diagnostic.CA1707.severity = none

[*.cs]
# Unused usings
dotnet_diagnostic.IDE0005.severity = warning

[*.cs]
dotnet_diagnostic.RCS*.severity = warning
roslynator_accessibility_modifiers = explicit
roslynator_enum_has_flag_style = method
roslynator_object_creation_type_style = implicit

[*.cs]
dotnet_diagnostic.S*.severity = warning
dotnet_diagnostic.S6964.severity = none