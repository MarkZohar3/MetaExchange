# syntax=docker/dockerfile:1

FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src

COPY *.sln ./

COPY src/MetaExchange.Api/*.csproj src/MetaExchange.Api/
COPY src/MetaExchange.Application/*.csproj src/MetaExchange.Application/
COPY src/MetaExchange.Domain/*.csproj src/MetaExchange.Domain/

RUN dotnet restore ./src/MetaExchange.Api/MetaExchange.Api.csproj

COPY . .
RUN dotnet publish ./src/MetaExchange.Api/MetaExchange.Api.csproj -c Release -o /app/publish /p:UseAppHost=false

FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .

ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "MetaExchange.Api.dll"]